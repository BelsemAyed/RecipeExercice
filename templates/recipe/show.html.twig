{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.Title }}</td>
            </tr>
            <tr>
                <th>Sub_title</th>
                <td>{{ recipe.SubTitle }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                    {% for item in recipe.ingredients %}
                <td>
                    <ul class="list-group">
                        <li class="list-group-item">
                            {{ item["name"]|e }}
                        </li>
                    </ul>
                </td>
                    {% endfor %}
            </tr>

        </tbody>
    </table>
<div>
    <a href="{{ path('recipe_index') }}" class="btn btn-warning">back to list</a>

    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}" class="btn btn-success">edit</a>
</div>


    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
